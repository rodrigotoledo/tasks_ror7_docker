<div id="<%= dom_id task %>" class="scaffold_record">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= task.content %>
  </p>

  <p>
    <strong>Completed at:</strong>
    <%= task.completed_at %>
  </p>

  <p>
    <%= link_to "Show this task", task %>
  </p>
</div>
